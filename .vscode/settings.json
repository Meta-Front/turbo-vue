{
  "editor.defaultFormatter": "rvest.vs-code-prettier-eslint",
  "editor.formatOnPaste": false, // required
  "editor.formatOnType": false, // required
  "editor.formatOnSave": true, // optional
  "editor.formatOnSaveMode": "file", // required to format on save
  "files.autoSave": "onFocusChange", // optional but recommended
  "vs-code-prettier-eslint.prettierLast": false,
  "cSpell.words": [
    "antd",
    "brotli",
    "classname",
    "commitlint",
    "demi",
    "esno",
    "execa",
    "gifsicle",
    "iconify",
    "mockjs",
    "mozjpeg",
    "noopener",
    "noreferrer",
    "optipng",
    "picocolors",
    "pinia",
    "pngquant",
    "preinstall",
    "requirepnpm",
    "sortablejs",
    "stylelint",
    "tailwindcss",
    "tinycolor",
    "unocss",
    "unref",
    "Validable",
    "Vite",
    "vitepress",
    "vueuse"
  ], // set as "true" to run 'prettier' last not first
  "stylelint.validate": [
    // ↓ Add "html" language.
    "html",
    // ↓ Add "vue" language.
    "vue"
  ],
  "files.associations": {
    "*.json": "jsonc",
    "package.json": "json"
  },
  "eslint.enable": true,
  "eslint.validate": ["javascript", "javascriptreact", "typescript", "typescriptreact", "html", "vue", "json"],
  "[jsonc]": {
    "editor.defaultFormatter": "vscode.json-language-features"
  }
}
